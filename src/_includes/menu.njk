---
title: Products
---

{%extends "base.njk"%}

{% macro extract_data(products) %}
    <ul>
        <li>---</li>
        <li>products: </li>
        {% for product in products %}
        <li>- id: {{product.product_code}}</li>
        <li>&nbsp;&nbsp;name: {{product.name}}</li>
        <li>&nbsp;&nbsp;short_description: {{product.short_description}}</li>
        <li>&nbsp;&nbsp;price: {{product.price}}</li>
        {% endfor %}
        <li>---</li>
    </ul>
{% endmacro %}

{% block container %}
    <div class="container text-center">
        <div class="row">
            {% for product in products %}
                {% include "item.njk" %}
            {% endfor %}
        </div>
    </div>
{% endblock %}

    